{
  "name": "dhg-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "baseline:frontend": "yarn workspace @dhg/baseline-frontend",
    "baseline:backend": "yarn workspace @dhg/baseline-backend",
    "docs:frontend": "yarn workspace @dhg/docs-frontend",
    "docs:backend": "yarn workspace @dhg/docs-backend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.0.2"
} 