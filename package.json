{
  "name": "dhg-composer",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/dhg-baseline/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:frontend": "cd apps/dhg-baseline/frontend && npm run dev",
    "dev:backend": "npm run dev -w dhg-baseline-backend",
    "vercel-build": "turbo run build --filter=dhg-baseline-frontend^...",
    "vercel-install": "npm install --no-workspaces",
    "kill-port": "./scripts/utils/kill-port.sh"
  },
  "devDependencies": {
    "turbo": "^1.11.2"
  }
}
